{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es5", "es2015", "es2016", "dom"],
    "target": "es5",
    "strict": true,
    "module": "esnext",
    "outDir": "./dist/",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@models/*": ["models/*"],
      "@pages/*": ["pages/*"],
      "@routes/*": ["routes/*"],
      "@styles/*": ["styles/*"],
    }
  },
  "include": [
    "./src/**/*"
  ]
}